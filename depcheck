{ echo npm version:; npm -v || { echo npm undetected, installing...; sudo apt install npm || echo npm install failed; }; echo node.js version:; node -v || { echo node.js undetected, installing...; sudo apt install nodejs || echo node.js install failed; }; echo yarn version:; yarn -v || { echo yarn undetected, installing...; sudo apt install yarn || echo yarn install failed; }; } || echo dependency check failed && echo dependency check passed
